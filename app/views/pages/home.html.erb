
<style>
/* CSS for User Account Section */
.user-section {
  margin: 20px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.user-section h2 {
  font-size: 1.5em;
  color: #333;
}

.user-section a {
  display: inline-block;
  margin-right: 10px;
  text-decoration: none;
  color: #007bff; /* Blue color for links */
}

.user-section button {
  padding: 5px 10px;
  background-color: #007bff; /* Blue background color for buttons */
  color: #fff; /* White text color */
  border: none;
  border-radius: 3px;
}

/* CSS for Sign-in and Create Account Links */
.sign-links a {
  display: block;
  margin-bottom: 10px;
}

.sign-links a:hover {
  text-decoration: underline;
}
</style>


<% if current_user %>
<div class="user-section">
<img src="<%= current_user.avatar_url %>" width='200px' height="200px" />
<h2>Name - <%= @user.email_domain %></h2>
<h2>Email - <%= current_user.email %></h2>
<%= link_to "Edit Account", edit_user_registration_path %>
    <%= button_to "Log Out", destroy_user_session_path, data: { turbo: "false" }, method: :delete %>
</div>
<% else %>
<div class="sign-links">
    <%= link_to "Sign in", new_user_session_path %>
    <%= link_to "Create Account", new_user_registration_path %>
</div>
<% end %>

